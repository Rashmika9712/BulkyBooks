@model List<Product>
@{
    ViewData["Title"] = "Product List";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark bg-gradiant ms-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white pt-1">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container">
            <div class="row pb-3">
                <div class="col-6"></div>
                <div class="col-6 text-end">
                    <a asp-action="Create" asp-controller="Product" class="btn btn-dark">
                        <i class="bi bi-plus-circle"></i>&nbsp; Create New Product
                    </a>
                </div>
            </div>

            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Title
                        </th>
                        <th>
                            Author
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td>@obj.Title</td>
                            <td>@obj.Author</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id"
                                       class="btn btn-success">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"
                                       class="btn btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
