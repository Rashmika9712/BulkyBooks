@model List<Product>
@{
    ViewData["Title"] = "Product List";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-dark bg-gradiant ms-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white pt-1">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container">
            <div class="row pb-3">
                <div class="col-6"></div>
                <div class="col-6 text-end">
                    <a asp-action="Upsert" asp-controller="Product" class="btn btn-dark">
                        <i class="bi bi-plus-circle"></i>&nbsp; Create New Product
                    </a>
                </div>
            </div>

            <table id="tblData" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>ISBN</th>
                        <th>Price</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}
