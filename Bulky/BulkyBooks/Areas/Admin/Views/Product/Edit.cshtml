@model Product
@{
    ViewData["Title"] = "Edit Product";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark bg-gradiant ms-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white pt-1">Edit Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3">
                <div class="form-floating pt-2 col-12">
                    <input asp-for="Title" class=" form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2 mt-1"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating pt-3 col-12">
                    <input asp-for="Author" class="form-control border-0 shadow" />
                    <label asp-for="Author" class="ms-2 mt-3"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-dark form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-asp-controller="roduct" asp-action="index" class="btn btn-outline-dark form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}